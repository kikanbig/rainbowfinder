# RainbowFinder Backend Environment Variables

# Сервер
NODE_ENV=development
PORT=3000
API_VERSION=v1

# OpenWeatherMap API
OPENWEATHER_API_KEY=be314fc63d2ce6bc8c976a4e60be8955

# База данных MongoDB
MONGODB_URI=mongodb://localhost:27017/rainbow-finder
MONGODB_DB_NAME=rainbow-finder

# Redis (для кэширования)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# JWT
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token_here

# Логирование
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Мониторинг
MONITORING_INTERVAL_MINUTES=10
CLEANUP_INTERVAL_HOURS=24
AIR_QUALITY_UPDATE_INTERVAL_HOURS=1

# External APIs
WEATHER_API_TIMEOUT=5000
NOTIFICATION_RETRY_ATTEMPTS=3

# Безопасность
API_KEY_HEADER=X-API-Key
API_KEYS=rainbow-finder-mobile-app,rainbow-finder-web

# Railway deployment
RAILWAY_STATIC_URL=
RAILWAY_PUBLIC_DOMAIN= 